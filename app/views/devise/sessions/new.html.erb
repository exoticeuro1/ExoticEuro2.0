
<div class = "devise-form">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email , class: "signin-email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="signin-button">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>

<div class = "space"></div>


<style>
  .devise-page{
    height: 100vh;
  }
  .devise-form {
    width: 95%;
    max-width: 500px;
    margin-top: 150px;
    background-color: #e1e2e1;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 24px;

  }

  .devise-form h2 {
    color: #000;
    font-weight: 600;
    font-size: clamp(2rem, 10vw, 3rem);
    margin-bottom: 20px;
  }

  .devise-form .field {
    align-content: center;
    display: flex;
    flex-direction: column;
  }

  .devise-form input[type="email"],
  .devise-form input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #000;
    border-radius: 12px;
    margin-bottom: 10px;
  }

  .devise-form label {
    margin-bottom: 5px;
    color: #000;
    font-size: 1.5rem;
    align-self: center;
  }

  .devise-form .signin-button{
    display: flex;
    justify-content: center;
  }

  .signin-button input[type="submit"] {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    font-size: 1.2rem;
  }


</style>