<div class = "side-page" style = "height: auto;">
    <div class = "space"></div>
    <h1> Contact </h1>
  
    <div class = "contact-page">
        <h3> Give us a call </h3>

     <%= link_to "tel:#{@phone}", class: "nav-home-link" do %>
  <%= image_tag "phone.svg", alt: "Call us", class: "nav-home-icon" %>
  <span class="nav-home-text"><%= @phone %></span>
<% end %>
         <h3> Or send us an email </h3>
    </div>


<div class="contact-form">
  <%= form_with(url: send_email_path, method: :post, local: true) do |form| %>

    <div class="form-row">
      <div class="form-group half">
        <%= form.label :first_name, "First Name" %>
        <%= form.text_field :first_name, required: true, placeholder: "Enter your first name" %>
      </div>

      <div class="form-group half">
        <%= form.label :last_name, "Last Name" %>
        <%= form.text_field :last_name, required: true, placeholder: "Enter your last name" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group half">
        <%= form.label :email, "Your Email" %>
        <%= form.email_field :email, required: true, placeholder: "you@example.com" %>
      </div>

      <div class="form-group half">
        <%= form.label :phone, "Your Phone" %>
        <%= form.telephone_field :phone, required: true, placeholder: "" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :message, "Message" %>
      <%= form.text_area :message, required: true, placeholder: "Write your message here...", rows: 5 %>
    </div>

    <div class="form-group">
      <%= form.submit "Send Message" %>
    </div>

  <% end %>
</div>


</div>

<style>


.nav-home-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  
  background-color: #0D1B2A;
  color: white;
  border: none;
  text-decoration: none;
  
  font-size: clamp(1rem, 3vw, 1.5rem);
  padding: clamp(0.5rem, 2vw, 1rem)clamp(1rem, 4vw, 2rem);
  border-radius: clamp(0.5rem, 5vw, 2.5rem);
  
  /* make sure the icon scales nicely */
  .nav-home-icon {
    width: 1em;
    height: 1em;
  }
}



/* Container */
.contact-form {
  max-width: 900px;
  width: 90%;
  margin: 0 auto;
  padding: 2rem;
  border-radius: 8px;
  box-sizing: border-box;
}

.form-row {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.form-group.half {
  flex: 1 1 48%;
}



.space {
    height: clamp(60px, 10vh, 120px);
}
/* Full-width field (e.g., message) */
.form-group {
  margin-bottom: 1rem;
  display: flex;
  flex-direction: column;
}

/* Label styling */
.form-group label {
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: white;
  font-size: 1.1rem;
}

/* Input and textarea styling */
.form-group input,
.form-group textarea,
.form-group input[type="text"] {
  padding: 0.75rem;
  border: 1px solid #ccc;
  border-radius: 24px;
  font-size: 1rem;
  box-sizing: border-box;
  width: 100%;
}

.field-label{
  color: white;
}

/* Submit button */
.form-group input[type="submit"] {
  background-color: #007BFF;
  color: white;
  font-weight: bold;
  border: none;
  cursor: pointer;
  padding: 0.75rem;
  transition: background-color 0.3s ease;
  
  border-radius: 24px;
}

.form-group input[type="submit"]:hover {
  background-color: #0056b3;
}

@media (max-width: 600px) {
  .form-group.half {
    flex: 1 1 100%;
  }
}


.contact-page {
  text-align: center;
  margin-bottom: 2rem;
  color: white;
}

.contact-page h3 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}

.contact-page a {
  font-size: 1.5rem;
 
  text-decoration: none;
}

@media (max-width:420px)
{
  .contact-page h3 {
    font-size: 1.5rem;
  }

  .contact-page a {
    font-size: 1.2rem;
  }
  .contact-form {
    padding: 1rem;
  }
  .contact-form input[type="text"],
  .contact-form textarea {
    font-size: 0.9rem;
    width: 100%;
  }
  .contact-form input[type="submit"] {
    font-size: 1rem;
  }
  .contact-form label {
    font-size: 1rem;
  }
  .form-group.half{
    width: 100%;
  }
}



</style>