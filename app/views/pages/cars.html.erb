<div class = "side-page">

    <h1> Our vehicles </h1>
    <p> We have a wide range of vehicles available for you to choose from. </p>
    <p> Please select a vehicle from the list below: </p>

<div class="grid-container">
  <% @cars.each do |car| %>
    <%= link_to car_path(car_id: car.id), class: "display-car", style: "background-image: url('#{car.images.first.url}');" do %>
      <div class="text-gradiant"></div>

      <div class="car-text">
        <h2><%= car.car_make %> <%= car.car_model %></h2>
        <span><%= number_to_currency(car.price) %></span>
      </div>
    <% end %>
  <% end %>
</div>


</div>

<style>
.side-page p {
  font-size: 1.6em;
  margin-bottom: 20px;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* 3 per row if space allows */
  gap: 20px;
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.display-car {
  position: relative;
  display: block;
  border: 2px solid #000;
  width: 100%;
  height: 200px;
  box-shadow: 0px 0px 5px #000000;
  border-radius: 21px;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  text-decoration: none;
  color: inherit;
  cursor: pointer;
}

.car-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px;
  color: white;
  text-align: center;
  z-index: 2;
}

  </style>