<div class="contact-card" style = "height: 250px">
  <div class="contact-content" style="display: flex; align-items: center; justify-content: center; ">
    <div class="left-side">
      <div class="contact-info">
      
        <h3><%= @user.name %></h3>
        <p>Phone: <%= @user.phone %></p>
        <p>Email: <%= @user.email %></p>
      </div>
    </div>
    
    <div class="work-hours">
      <h3>Work Hours</h3>
      <a>Mon - Fri: 9:00 AM - 6:00 PM</a><br>
      <a>Sat: 10:00 AM - 4:00 PM</a><br>
      <a>Sun: Closed</a>
    </div>
  </div>
</div>

