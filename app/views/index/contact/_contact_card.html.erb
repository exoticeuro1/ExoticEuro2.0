<div class="contact-card">
  <div class="contact-content">
    <div class="left-side">
      <div class="contact-info">
        <h3><%= @user.name %></h3>
        <a>Phone: <%= @user.phone %></a><br>
        <a>Email: <%= @user.email %></a>
      </div>
    </div>

    <div class="work-hours">
      <div class="hours-info">
        <h3>Work Hours</h3>
        <a>Mon - Fri: 9:00 AM - 6:00 PM</a><br>
        <a>Sat: 10:00 AM - 4:00 PM</a><br>
        <a>Sun: Closed</a>
      </div>
    </div>
  </div>
</div>



<style>

@media (max-width: 420px) {
  .contact-card {
    width: 90%;
    height: auto;
    margin: 0 auto;
    padding: 10px;

  }

  .contact-content {
    flex-direction: column;
    align-items: center;
  }
  
  .left-side {
    width: 100%;
    padding: 0;
    text-align: center;
    margin: 0 auto;
  }

  .contact-info {
    width: 100%;
    margin: 0 auto;
  }
  .contact-info h3{
    font-size: 1.5em;
  }

  .contact-info p{
    font-size: 1.2em;
  }

  .work-hours{
    margin-bottom: 10px;
  }
}
</style>

